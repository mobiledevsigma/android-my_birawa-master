<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.co.gsd.mybirawa.controller.sc.RequestOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/item_jenis3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Pilih Alamat " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.3"
                android:background="@drawable/tabel"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_below="@+id/textView6"
                    android:layout_marginLeft="5dp"
                    android:text="Pilih Alamat"
                    android:textColor="#A71313" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.7"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pilihaddress"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@+id/gedung"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/gedung"
                    android:layout_toRightOf="@+id/gedung"
                    app:srcCompat="@drawable/menu" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/item_jenis1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pilih Jenis Item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.3"
                android:background="@drawable/tabel"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jenisitem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_below="@+id/textView6"
                    android:layout_marginLeft="5dp"
                    android:text="Pilih Jenis Item"
                    android:textColor="#A71313" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.7"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pilihanjenis"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@+id/gedung"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/gedung"
                    android:layout_toRightOf="@+id/gedung"
                    app:srcCompat="@drawable/menu" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/item_jenis2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Pilih Item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.3"
                android:background="@drawable/tabel"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_jns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_below="@+id/textView6"
                    android:layout_marginLeft="5dp"
                    android:text="Pilih item "
                    android:textColor="#A71313" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.7"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pilihitem"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@+id/gedung"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/gedung"
                    android:layout_toRightOf="@+id/gedung"
                    app:srcCompat="@drawable/menu" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</ScrollView>
