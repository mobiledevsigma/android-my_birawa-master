<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:orientation="vertical"
    android:weightSum="2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_punch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A71313"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/tv_toolbar_punch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexa_light"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/shadow"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/tv_det_punch_numb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_light"
                android:text="No Ticket : Ticket 1"
                android:textColor="#666666"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_det_punch_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_light"
                android:text="Tanggal"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_det_punch_gedung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_light"
                android:text="Gedung : STO Kedoya"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_det_punch_lantai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_light"
                android:text="lantai : Lantai 1"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_det_punch_perangkat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_light"
                android:text="Item : AC Centrall (AC10012)"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_det_punch_keluhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:fontFamily="@font/nexa_light"
                android:text="Keluhan : AC tidak terasa dingin"
                android:textColor="#666666" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/shadow"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexa_light"
                    android:gravity="center"
                    android:text="Gambar 1" />

                <ImageView
                    android:id="@+id/img_cam_before"
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/fields_checklist"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_menu_camera" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexa_light"
                    android:gravity="center"
                    android:text="Gambar 2" />

                <ImageView
                    android:id="@+id/img_cam_after"
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/fields_checklist"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_menu_camera" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spin_punch_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <EditText
                android:id="@+id/edit_punch_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/nexa_light"
                android:gravity="top"
                android:hint="Deskripsi"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_submit_punch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A71313"
                android:fontFamily="@font/nexa_light"
                android:text="Submit"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>